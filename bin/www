    commander.command('help').description('提示信息： 如何使用这个小工具.').action(() => { 
      commander.outputHelp(); 
    });
    commander.command('trans [text]').description('翻译给定的文本，中英文都可.').action((text) => {
        trans(text);
    });

    // 开始解析命令行参数
    commander.parse(process.argv);
